<Window x:Class="TaskScheduler.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskScheduler"
        mc:Ignorable="d"
         Title="Добавить задачу" Height="200" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Введите описание задачи:" />
        <TextBox x:Name="TaskDescriptionTextBox" Width="350" Margin="0,5,0,10" />
        <Button Content="Добавить" Click="AddButton_Click" Width="100" />
    </StackPanel>
</Window>
